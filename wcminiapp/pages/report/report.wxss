.page {
  padding: 16px;
  background: #f7f9fc;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 12px;
}

.title {
  font-size: 26px;
  font-weight: 800;
  color: #1f3a8a;
}

.subtitle {
  margin-top: 6px;
  font-size: 12px;
  color: #64748b;
}

.card {
  margin-top: 12px;
  background: #ffffff;
  border-radius: 16px;
  padding: 14px;
  box-shadow: 0 6px 16px rgba(15, 23, 42, 0.06);
  border: 1px solid rgba(99, 102, 241, 0.08);
}

.label {
  font-size: 12px;
  color: #64748b;
  margin-bottom: 8px;
}

.input {
  height: 44px;
  padding: 0 12px;
  border-radius: 12px;
  border: 1px solid #e2e8f0;
  background: #f8fafc;
  font-size: 16px;
  color: #0f172a;
}

.hint {
  margin-top: 8px;
  font-size: 12px;
  color: #64748b;
}

.error {
  margin-top: 10px;
  padding: 10px;
  border-radius: 12px;
  background: #fee2e2;
  color: #991b1b;
  font-size: 13px;
  border: 1px solid rgba(153, 27, 27, 0.15);
}

.btn {
  margin-top: 12px;
  border-radius: 12px;
  font-size: 14px;
}

.btn.primary {
  background: #1f3a8a;
  color: #ffffff;
}