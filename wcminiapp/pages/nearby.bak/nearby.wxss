.page {
  padding: 16px;
  background: #f7f9fc;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 12px;
}

.title {
  font-size: 26px;
  font-weight: 800;
  color: #1f3a8a;
}

.controls {
  display: flex;
  align-items: center;
  justify-content: space-between; /* left + right */
  width: 100%;
  margin-top: 12px;
}

.pill {
  padding: 8px 12px;
  border-radius: 999px;
  background: #e0e7ff;
  color: #1e40af;
  font-size: 13px;
}

.btn {
  font-size: 13px;
  border-radius: 10px;
}

.state {
  margin-top: 12px;
  padding: 12px;
  text-align: center;
  background: #ffffff;
  border-radius: 12px;
  color: #334155;
  border: 1px solid #eef2ff;
}

.state.error {
  background: #fee2e2;
  color: #991b1b;
  border-color: rgba(153, 27, 27, 0.15);
}

.card {
  margin-top: 12px;
  background: #ffffff;
  border-radius: 14px;
  padding: 14px;
  box-shadow: 0 6px 16px rgba(15, 23, 42, 0.06);
  border: 1px solid rgba(99, 102, 241, 0.08);
}

.cardTop {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 10px;
}

.name {
  font-size: 16px;
  font-weight: 700;
  color: #0f172a;
  flex: 1;
}

.badge {
  padding: 4px 10px;
  border-radius: 999px;
  font-size: 12px;
  font-weight: 700;
  border: 1px solid transparent;
}

.badge.HIGH {
  background: #dcfce7;
  color: #166534;
  border-color: rgba(22, 101, 52, 0.15);
}

.badge.MEDIUM {
  background: #fef9c3;
  color: #854d0e;
  border-color: rgba(133, 77, 14, 0.15);
}

.badge.LOW {
  background: #ffedd5;
  color: #9a3412;
  border-color: rgba(154, 52, 18, 0.15);
}

.badge.NONE {
  background: #e2e8f0;
  color: #334155;
  border-color: rgba(51, 65, 85, 0.15);
}

.metrics {
  margin-top: 12px;
  display: flex;
  gap: 10px;
}

.metric {
  flex: 1;
  background: #f8fafc;
  border-radius: 12px;
  padding: 10px;
  border: 1px solid #eef2ff;
}

.k {
  font-size: 11px;
  color: #64748b;
}

.v {
  margin-top: 6px;
  font-size: 13px;
  color: #0f172a;
  word-break: break-all;
}

.v.price {
  font-weight: 800;
  color: #16a34a;
}

/* Refresh button (shared pattern) */
.refreshWrap {
  width: 44px;
  height: 44px;

  display: flex;
  align-items: center;
  justify-content: center;
}

.refreshBtn {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background: #e0e7ff;
  color: #1e40af;

  display: flex;
  align-items: center;
  justify-content: center;

  font-size: 18px;
  font-weight: 700;

  box-shadow: 0 4px 10px rgba(30, 64, 175, 0.15);

  transform: rotate(120deg);
}

.refreshWrap:active .refreshBtn {
  transform: rotate(150deg) scale(0.92);
  opacity: 0.85;
}