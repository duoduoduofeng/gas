.wrap {
  display: flex;
  align-items: center;
  gap: 12px;
  width: 100%;
  box-sizing: border-box;
}

/* 70 x 52 rectangular button */
.btn {
  width: 70px;
  height: 52px;
  flex: 0 0 70px;

  border-radius: 14px;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  background: #e0e7ff;
  color: #1e40af;
}

.btnHover {
  opacity: 0.85;
}

/* Disabled state */
.btn.disabled {
  background: #e5e7eb;
  color: #9ca3af;
}

.btn.disabled .limit {
  color: #9ca3af;
}

.sign {
  font-size: 20px;
  font-weight: 800;
  line-height: 1;
}

.limit {
  margin-top: 2px;
  font-size: 10px;
  line-height: 1;
  color: #3730a3;
}

/* Input always visible */
.input {
  flex: 1 1 auto;
  min-width: 160px;
  height: 52px;

  padding: 0 14px;
  border-radius: 14px;
  border: 1px solid #e2e8f0;
  background: #f8fafc;

  font-size: 18px;
  font-weight: 600;
  color: #0f172a;
  text-align: center;

  box-sizing: border-box;
}